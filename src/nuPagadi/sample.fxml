<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<BorderPane fx:controller="nuPagadi.Controller"
            xmlns:fx="http://javafx.com/fxml" >
    <left>
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
            <Button GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="leftUpButton" onAction="#handleButtonClick" />
            <Button GridPane.columnIndex="0" GridPane.rowIndex="25" fx:id="leftDownButton" onAction="#handleButtonClick" />
        </GridPane>
    </left>

    <center>
        <AnchorPane fx:id="anch" >
            <Rectangle fx:id="rectangleUpLeft" width="200" height="20" rotate="30"
                       AnchorPane.topAnchor="95" AnchorPane.leftAnchor="80" />
            <Rectangle fx:id="rectangleUpRight" width="200" height="20" rotate="-30"
                       AnchorPane.topAnchor="95" AnchorPane.rightAnchor="80" />
            <Rectangle fx:id="rectangleDownLeft" width="180" height="20" rotate="30"
                       AnchorPane.topAnchor="210" AnchorPane.leftAnchor="70" />
            <Rectangle fx:id="rectangleDownRight" width="180" height="20" rotate="-30"
                       AnchorPane.topAnchor="210" AnchorPane.rightAnchor="70" />
            <Label fx:id="wolfLabel" AnchorPane.topAnchor="165" AnchorPane.leftAnchor="251"  />

        </AnchorPane>
    </center>

    <right>
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
            <Button GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="rightUpButton" onAction="#handleButtonClick" />
            <Button GridPane.columnIndex="0" GridPane.rowIndex="25" fx:id="rightDownButton" onAction="#handleButtonClick" />
        </GridPane>
    </right>
</BorderPane>